
<div class="card-content">
   <h1>Log In</h1>
   <%= form_for :login do |f| %>
   <div>
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true %>
   </div>
   <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
   </div>
   <div>
      <%= f.submit "Log In" %>
   </div>
   <% end %>

      <div class="ball orange" > </div>
   <div class="ball red" > </div> 
   <div class="ball blue" > </div>
   <div class="ball pink" > </div>
      <div class="ball green" > </div>
</div>